<h1>Criar Fórum para:  <%= @article.name %></h1>

<%= form_with(model: [@article, @forum], local: true) do |form| %>
  <div>
    <%= form.label :Título %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :Conteúdo %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit "Criar Fórum" %>
  </div>
<% end %>
