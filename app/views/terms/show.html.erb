<h1>Terms#show</h1>
<h2><%= @term.name %></h2>
<p><%= @term.description %></p>

<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'Edit', edit_term_path(@term) %> |
  <%= link_to 'Delete', @term, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Edit', edit_term_path(@term) if policy(@term).update? %>
<%= link_to 'Back', terms_path %>
