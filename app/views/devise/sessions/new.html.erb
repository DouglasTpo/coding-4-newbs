<div class="login-container">
  <h1 class="text-neon text-center">LOGIN <i class="fa fa-sign-in-alt"></i></h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "custom-input" },
                  label_html: { class: "custom-label" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "custom-input" },
                  label_html: { class: "custom-label" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "LOGIN", class: "btn btn-submit" %>
    </div>
  <% end %>

  <p class="text-center mt-4">
    No Account? <%= link_to "Sign up here", new_registration_path(resource_name), class: "custom-link" %>
  </p>
</div>

<%= render "devise/shared/links" %>
